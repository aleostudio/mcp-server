# Server
MCP_SERVER_NAME="mcp-server"
MCP_HOST=0.0.0.0
MCP_PORT=8000
MCP_DEBUG=false
MCP_LOG_LEVEL=INFO

# HTTP Client (fetch_url tool)
MCP_HTTP_TIMEOUT=30.0
MCP_HTTP_MAX_CONNECTIONS=100

# Tools
MCP_MAX_TEXT_LENGTH=100000
MCP_MAX_URL_CONTENT=2000
MCP_ENABLE_FETCH_TOOL=true

# Allowed domains for fetch_url (comma-separated, empty = all)
# Example: MCP_ALLOWED_FETCH_DOMAINS=["api.github.com","httpbin.org"]
# MCP_ALLOWED_FETCH_DOMAINS=
